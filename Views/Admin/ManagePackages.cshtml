@model IEnumerable<TourPackage>
@{
    ViewData["Title"] = "Manage Packages";
}

<div class="container mt-4">
    <h2>Tour Packages</h2>
    <a asp-action="CreatePackage" class="btn btn-success mb-3">Create New Package</a>

    <table class="table table-bordered shadow-sm">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var package in Model)
            {
                <tr>
                    <td>
                        <img src="@package.ImageUrl" alt="@package.Title" style="width:80px;height:60px;object-fit:cover;" />
                    </td>
                    <td>@package.Title</td>
                    <td>@package.Description</td>
                    <td>₹@package.Price</td>
                    <td>
                        <a asp-action="EditPackage" asp-route-id="@package.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="DeletePackage" asp-route-id="@package.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
