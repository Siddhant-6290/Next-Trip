@model IEnumerable<User>
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <h2>All Customers</h2>
    <table class="table table-striped shadow-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                </tr>
            }
        </tbody>
    </table>
</div>
